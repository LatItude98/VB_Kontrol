<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.vbkontrol" name="VB Kontrol - Universal Video Backgrounds" version="1.0.4" provider-name="Hermit">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup"/>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en_GB">Universal Video Background Control for Kodi</summary>
        <description lang="en_GB">Complete video background solution with both interface and background service. Click Run to select video files, service runs automatically to provide backgrounds to skins.</description>
        <license>GPL-2.0-or-later</license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>